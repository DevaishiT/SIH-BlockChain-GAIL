<%- include("../partials/header") %>

<div class="row">
    <div style="width: 30%; margin: 25px auto;">

        <div class="form-group">
            Title: <%= project.title%>
        </div>

        <div class="form-group">
            Description: <%= project.description%>
        </div>

        <div class="form-group">
            Status: <%= project.status%>
        </div>

        <div class="form-group">
            Progress: <%= project.progress%>
        </div>

        <div class="form-group">
            Deadline: <%= project.deadlineTime%>
        </div>

        <div class="form-group">
            <a href="/updateprogress" class="btn btn-primary">
                Update Progress
            </a>
        </div>

        <div class="form-group">
              <% if(project.type == "product" and project.status == "in-progress"){ %>
                    <form action="/projectdetails" method="post">
                        <input type="hidden" name="status" value="shipping" />
					              <input class="btn btn-primary" type="submit" value="Initiate Shipping" />
                    </form>
              <%} else {%>
                  <form action="/projectdetails" method="post">
                      <input type="hidden" name="status" value="in-review" />
                      <input class="btn btn-primary" type="submit" value="Submit Project" />
                  </form>
              <% } %>


        </div>
    </div>
</div>

<%- include("../partials/footer") %>
